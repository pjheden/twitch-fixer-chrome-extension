{
  "manifest_version": 2,

  "name": "Hello Extensions",
  "description": "Hides the section with streams in your language",
  "version": "1.0",

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon_19.png",
    "default_title": "Toggle language stream visibility"
  },
  "permissions": [
    "activeTab"
  ]
}
