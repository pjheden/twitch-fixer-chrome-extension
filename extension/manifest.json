{
  "manifest_version": 2,
  "name": "Twitch Fixer",
  "version": "1.0",

  "description": "Hides the section: streams in your language",
  "icons": {
    "128": "icon_128.png"
  },

  "browser_action": {
    "default_icon": "icon_19.png",
    "default_title": "Toggle language stream visibility"
  },

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab"
  ],
  "version_name": "1.0 beta"
}
